<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DropTest"
             xmlns:components="clr-namespace:DropTest.Components"
             xmlns:platform="clr-namespace:DropTest.Platforms.MacCatalyst"
             x:Class="DropTest.MainPage">

    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.GestureRecognizers>
            <DropGestureRecognizer AllowDrop="True"
                                   Drop="OnDropGestureRecognizerDrop" />
        </BlazorWebView.GestureRecognizers>
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type components:Routes}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>
</ContentPage>
